{
  "name": "website",
  "version": "0.1.1",
  "private": true,
  "browserslist": {
    "production": [
      "chrome >= 91",
      "edge >= 91",
      "firefox >= 90",
      "safari >= 15",
      "ios >= 15",
      "not dead",
      "not ie 11",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,md}\"",
    "typecheck": "tsc --noEmit",
    "optimize-images": "node scripts/optimize-images.js",
    "download-images": "node scripts/download-images.js",
    "prepare": "husky"
  },
  "dependencies": {
    "@mdx-js/loader": "^3.1.0",
    "@mdx-js/react": "^3.1.0",
    "@next/mdx": "^15.4.4",
    "@vercel/analytics": "^1.5.0",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "framer-motion": "^12.23.9",
    "gray-matter": "^4.0.3",
    "lucide-react": "^0.525.0",
    "next": "15.4.4",
    "next-mdx-remote": "^5.0.0",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-markdown": "^10.1.0",
    "reading-time": "^1.5.0",
    "recharts": "^3.1.0",
    "sharp": "^0.34.3",
    "swiper": "^11.2.10",
    "tailwind-merge": "^3.3.1",
    "web-vitals": "^5.0.3"
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^7.0.2",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "autoprefixer": "^10.4.21",
    "critters": "^0.0.23",
    "cssnano": "^7.1.0",
    "eslint-config-next": "^15.4.5",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "tailwindcss": "^3.4.1",
    "typescript": "^5"
  }
